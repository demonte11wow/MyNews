<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="5dp">

    <RelativeLayout

        android:padding="3dp"
        android:background="@drawable/item_shopping_bg_selector"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_centerVertical="true">
        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:layout_marginLeft="5dp"
            android:src="@drawable/news_pic_default"


            />
        <LinearLayout
            android:padding="3dp"

            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/iv_icon"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:layout_centerVertical="true">
            <TextView
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:id="@+id/tv_name"
                android:text="联想（Lenovo）拯救者14.0英寸游戏本（i7-4720HQ 4G 1T硬盘 GTX960M 2G独显 FHD IPS屏 背光键盘）黑"
                android:lines="2"
                android:textColor="#66000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

              />
            <View

                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#66000000"

                />
            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="￥1000"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btn_buy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@drawable/btn_buy_selector"
                    android:text="立即购买"
                    android:textColor="@drawable/btn_buy_textcolor_selector"
                    android:textSize="15sp"

                    />

            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>